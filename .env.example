# BLE Device Configuration
# macOS-style UUID or Linux/Windows MAC address
BLE_ADDRESS=

# Optional: discover device by name substring (used when BLE_ADDRESS not set)
BLE_NAME=

# Reconnection Backoff Settings
BACKOFF_INITIAL=1.0
BACKOFF_MAX=60.0
BACKOFF_JITTER=0.5

# Telemetry Parsing
# Set to 1/true/yes to parse incoming text into JSON, 0 for raw text
PARSE_TELEMETRY=1
